<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyTaskManager2.InfoPage"
             Title="Información"
             Icon="infox.png"
             >
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <StackLayout BackgroundColor="#3498DB">
                <Image Margin="0,30,0,0" Source="Calendar.png" Aspect="AspectFit"/>
                <Label x:Name="lblDate" Text="Domingo, 29, Octubre" Margin="0,0,0,0" Style="{StaticResource lblStyleDefault}" TextColor="#FFFFFF"/>
                <Label Text="Informacion" Margin="0,-8,0,3" Style="{StaticResource lblStyleDefault}" TextColor="#FFFFFF" FontSize="36"/>
            </StackLayout>
            <StackLayout BackgroundColor="#ecf0f1" Margin="0,0,0,20">
                <Label Text="Acerca" Margin="0,3,0,0" Style="{StaticResource lblStyleDefault}" TextColor="#000000" FontSize="24"/>
                <Label Text="de nosotros" Margin="0,-8,0,5" Style="{StaticResource lblStyleDefault}" TextColor="#000000"/>
            </StackLayout>

            <StackLayout>

            </StackLayout>


        </StackLayout>

    </ContentPage.Content>
</ContentPage>